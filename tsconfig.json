{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "paths":{
      "@components":["components/index.tsx"],
      "@components/*":["components/*"],
      "@partials":["components/partials/index.tsx"],
      "@partials/*":["components/partials/*"],
      "@simincao/*":["public/data/simincao/*"],
      "@laipeng/*":["public/data/laipeng/*"],
      "@assets/*":["public/assets/*"],
      "@styles/*":["styles/*"],
      "@hooks/*":["hooks/*"]

    }
  },
  "include": [
    "next-env.d.ts", "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
